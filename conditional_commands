from selenium import webdriver
from selenium.webdriver.common.keys import Keys
import time

driver = webdriver.Chrome(executable_path="C:\Program Files\Drivers_browsers\chromedriver.exe") #driver path


driver.get("enter URL address")
driver.implicitly_wait(5) #waits for 5 seconds for all elements on the page to load
name_field = driver.find_element_by_name("username") #finds an element for username
print(name_field.is_displayed()) #returns True if the name is displayed, False otherwise
print(name_field.is_enabled()) #returns True if the name is enabled, False otherwise


password_field = driver.find_element_by_name("password") #finds an element for password
print(password_field.is_displayed()) #returns True if the name is displayed, False otherwise
print(password_field.is_enabled()) #returns True if the name is enabled, False otherwise

name_field.send_keys("enter email address")
password_field.send_keys("enter password")
driver.find_element_by_name("login").click() #finds a login button and click on it
time.sleep(3)

#to check if the login was successfull, check if these elements are on the page:
home = driver.find_element_by_xpath("enter element's xpath")
print("Button Home is displayed", home.is_displayed())

academy = driver.find_element_by_xpath("enter element's xpath")
print("Button Academy is displayed", academy.is_displayed())

all_is_selected = driver.find_element_by_xpath("enter element's xpath")
print("All is selected", all_is_selected.is_selected()) #returns True if "All" is selected, False otherwise

driver.close()       #closes the tab
#driver.quit()       #closes all the tabs/ the whole window
